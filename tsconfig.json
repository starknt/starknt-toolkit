{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      // "@starknt/utils": ["packages/utils/src/index.ts"],
      // "@starknt/utils/fetch": ["packages/utils/src/fetch.ts"],
      // "@starknt/wechat-pay-sdk": ["packages/wechat-pay-sdk/src/index.ts"],
      // "@starknt/wechat-miniprogram-server-sdk": ["packages/wechat-miniprogram-server-sdk/src/index.ts"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "packages"
  ]
}
